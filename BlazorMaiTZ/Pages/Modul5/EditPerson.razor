@page "/person"
@page "/person/{id:int}"
<h3>EditPerson</h3>
<EditForm EditContext="_edx" OnSubmit="save">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <InputPPEDV class="form-control" 
            @bind-Value="MyPerson.Name"></InputPPEDV>
            <ValidationMessage For="()=>MyPerson.Name"></ValidationMessage>
        </div>
    </div>
     <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">größe</label>
        <div class="col-sm-10">
         
            <InputNumber class="form-control" 
            @bind-Value="MyPerson.Gross"></InputNumber>
            <ValidationMessage For="()=>MyPerson.Gross"></ValidationMessage>
        </div>
    </div>
     <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Geb Dat</label>
        <div class="col-sm-10">
            <InputDate class="form-control" 
            @bind-Value="MyPerson.GebDat"></InputDate>
            <ValidationMessage For="()=>MyPerson.GebDat"></ValidationMessage>
        </div>
    </div>
  <button type="submit">save</button>
  <ValidationSummary></ValidationSummary>
</EditForm>

@code {
    [Parameter]
    public int id { get; set; }
    public Person MyPerson { get; set; } = new Person();
    EditContext _edx;
    void save()
    {

    }
    protected override void OnInitialized()
    {
        _edx=new EditContext(MyPerson);
        _edx.SetFieldCssClassProvider( new BootstrapFix());
    }
}
