@page "/chat"
@inject ChatVM vm
<div class="container">
    <div class="row">
        <div class="col">
            <div class="input-group mb-3">
                <input type="text" class="form-control" @bind="Nachricht"
                       placeholder="password">
                <button class="btn btn-outline-secondary" type="button"
                        @onclick="send">
                    Send
                </button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <ul class="list-group">
                @foreach (var item in vm.NachrichtenListe)
                {
                    <li class="list-group-item">
                        @item.Text
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

@code {
    string Nachricht;
    void send()
    {
        vm.Add(Nachricht);
    }
    protected override void OnInitialized() => vm.OnAdd += ()=>
                              InvokeAsync(StateHasChanged);

}
